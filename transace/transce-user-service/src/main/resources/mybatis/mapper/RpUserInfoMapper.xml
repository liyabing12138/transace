<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.transce.wcl.user.mapper.RpUserInfoMapper">

	<resultMap id="RM_RpUserInfo" type="com.transce.wcl.user.entity.RpUserInfo">
        <result property="id" column="id"/>
        <result property="createTime" column="create_time"/>
        <result property="status" column="status"/>
        <result property="userNo" column="user_no"/>
        <result property="userName" column="user_name"/>
        <result property="accountNo" column="account_no"/>
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[
		id,create_time,status,user_no,user_name,account_no
	    ]]>
	</sql>

	<!--保存 -->
	<insert id="save">
	    <![CDATA[
	        INSERT INTO rp_user_info (
	        	id ,
	        	create_time ,
	        	status ,
	        	user_no ,
	        	user_name ,
	        	account_no 
	        ) VALUES (
	        	#{id} ,
	        	#{createTime} ,
	        	#{status} ,
	        	#{userNo} ,
	        	#{userName} ,
	        	#{accountNo} 
	        )
	    ]]>
	</insert>
	
	<!-- update 条件组合 -->
	<sql id="update_sql">
		<set>
			<if test="createTime != null">
				create_time = #{createTime} ,
			</if>
			<if test="status != null and status != ''">
				status = #{status} ,
			</if>
			<if test="userNo != null and userNo != ''">
				user_no = #{userNo} ,
			</if>
			<if test="userName != null and userName != ''">
				user_name = #{userName} ,
			</if>
			<if test="accountNo != null and accountNo != ''">
				account_no = #{accountNo} 
			</if>
		</set>
	</sql>
	
	<!-- 修改 -->
	<update id="update">
		UPDATE rp_user_info
		<include refid="update_sql" />
		WHERE
			id = #{id} 	</update>

	<!-- 根据ID删除 -->
	<delete id="delete">
    	<![CDATA[
        	DELETE FROM rp_user_info 
        	WHERE  id = #{id}
    	]]>
	</delete>
	
	<!-- getById -->
	<select id="getById" resultMap="RM_RpUserInfo">
		SELECT
		<include refid="columns" />
		FROM rp_user_info
		WHERE  id = #{id}  
	</select>

	<!-- 获取总数 -->
	<select id="getTotalCount" resultType="int">
		SELECT COUNT(1)
		FROM rp_user_info
		<where>
			<if test="model != null">
						<if test="model.id != null and model.id !=''">
							AND id = #{model.id}
						</if>
						<if test="model.createTime != null">
							AND create_time = #{model.createTime}
						</if> 
						<if test="model.status != null and model.status !=''">
							AND status = #{model.status}
						</if>
						<if test="model.userNo != null and model.userNo !=''">
							AND user_no = #{model.userNo}
						</if>
						<if test="model.userName != null and model.userName !=''">
							AND user_name = #{model.userName}
						</if>
						<if test="model.accountNo != null and model.accountNo !=''">
							AND account_no = #{model.accountNo}
						</if>
			</if>
		</where>
	</select>  
	
	<!-- 按条件组合搜索列表  -->
	<select id="findList" resultMap="RM_RpUserInfo">
		SELECT
		<include refid="columns" />
		FROM  rp_user_info
		<where>
					<if test="id != null and id !=''">
						AND id = #{id}
					</if>
					<if test="createTime != null">
						AND create_time = #{createTime}
					</if>
					<if test="status != null and status !=''">
						AND status = #{status}
					</if>
					<if test="userNo != null and userNo !=''">
						AND user_no = #{userNo}
					</if>
					<if test="userName != null and userName !=''">
						AND user_name = #{userName}
					</if>
					<if test="accountNo != null and accountNo !=''">
						AND account_no = #{accountNo}
					</if>
		</where>
		<if test="sortColumns != null and sortColumns !=''">
			ORDER BY #{sortColumns}
		</if>
	</select>

	<!-- 分页 -->
	<select id="findPageList" resultMap="RM_RpUserInfo">
		SELECT <include refid="columns" />
		FROM rp_user_info
		<where>
			<if test="model != null">
						<if test="model.id != null and model.id !=''">
							AND id = #{model.id}
						</if>
						<if test="model.createTime != null">
							AND create_time = #{model.createTime}
						</if>
						<if test="model.status != null and model.status !=''">
							AND status = #{model.status}
						</if>
						<if test="model.userNo != null and model.userNo !=''">
							AND user_no = #{model.userNo}
						</if>
						<if test="model.userName != null and model.userName !=''">
							AND user_name = #{model.userName}
						</if>
						<if test="model.accountNo != null and model.accountNo !=''">
							AND account_no = #{model.accountNo}
						</if>
			</if>
		</where>
		limit 
		<choose>
			<when test="pager != null">
				#{pager.begin},#{pager.pageSize}
			</when>
			<otherwise>
				0,10
			</otherwise>
		</choose>
	</select>

</mapper>
